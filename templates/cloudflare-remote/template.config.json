{
	"id": "cloudflare-remote",
	"version": "1.0.0",
	"name": "Cloudflare Workers MCP Server",
	"description": "Remote MCP server deployed to Cloudflare Workers with SSE/HTTP transport",
	"capabilities": {
		"runtime": "cloudflare-workers",
		"transport": ["sse", "http"],
		"deployment": "remote",
		"language": "typescript"
	},
	"dependencies": {
		"mcp_sdk": "^1.20.2",
		"agents": "^0.2.17",
		"runtime_specific": {
			"wrangler": "^4.44.0",
			"@cloudflare/vitest-pool-workers": "^0.9.14"
		}
	},
	"scaffolding": {
		"variables": [
			{
				"name": "PROJECT_NAME",
				"required": true,
				"prompt": "Project name (lowercase with hyphens)"
			},
			{
				"name": "DESCRIPTION",
				"required": false,
				"default": "MCP server powered by Cloudflare Workers",
				"prompt": "Project description"
			},
			{
				"name": "PORT",
				"required": false,
				"default": "8788",
				"prompt": "Development server port",
				"pattern": "^\\d+$"
			},
			{
				"name": "MCP_SERVER_NAME",
				"required": false,
				"default": "MCP Server",
				"prompt": "MCP server display name"
			}
		],
		"postScaffold": {
			"install": true,
			"installCommand": "npm install",
			"postInstall": ["npm run cf-typegen"],
			"smokeTest": "npm run type-check"
		}
	},
	"cli": {
		"dev": "npm run dev",
		"test": "npm run test:all",
		"deploy": "npm run deploy",
		"typeCheck": "npm run type-check"
	},
	"features": {
		"unitTesting": true,
		"integrationTesting": true,
		"exampleTools": ["health", "echo"],
		"examplePrompts": ["code-review"],
		"exampleResources": ["config"],
		"documentation": true,
		"notes": "Example prompts and resources are reference-only (prefixed with _example-) and NOT registered by default. Use 'mcp-server-kit add prompt' or 'mcp-server-kit add resource' to create real implementations."
	},
	"compatibility": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	}
}
