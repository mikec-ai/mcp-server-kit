{
	"name": "{{PROJECT_NAME}}",
	"version": "1.0.0",
	"description": "{{DESCRIPTION}}",
	"private": true,
	"type": "module",
	"scripts": {
		"deploy": "wrangler deploy",
		"dev": "wrangler dev",
		"start": "wrangler dev",
		"cf-typegen": "wrangler types",
		"type-check": "tsc --noEmit",
		"format": "biome format --write",
		"lint:fix": "biome lint --fix",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"test:unit": "vitest run test/unit --config vitest.unit.config.ts",
		"test:integration": "npm run integration:run",
		"test:all": "npm run test:unit && npm run test:integration",
		"test:coverage": "vitest run --coverage --config vitest.unit.config.ts",
		"integration:run": "tsx test/integration/cli.ts run",
		"integration:list": "tsx test/integration/cli.ts list",
{{#if DEV_MODE}}
		"validate": "node {{{MCP_KIT_PATH}}}/bin/mcp-server-kit.js validate",
		"validate:strict": "node {{{MCP_KIT_PATH}}}/bin/mcp-server-kit.js validate --strict",
		"tools:list": "node {{{MCP_KIT_PATH}}}/bin/mcp-server-kit.js list tools",
		"tools:add": "node {{{MCP_KIT_PATH}}}/bin/mcp-server-kit.js add tool",
{{else}}
		"validate": "npx mcp-server-kit validate",
		"validate:strict": "npx mcp-server-kit validate --strict",
		"tools:list": "npx mcp-server-kit list tools",
		"tools:add": "npx mcp-server-kit add tool",
{{/if}}
		"check": "npm run type-check && npm run lint:fix && npm run test:unit",
		"precommit": "npm run format && npm run check && npm run validate"
	},
	"dependencies": {
		"agents": "^0.2.17",
		"@modelcontextprotocol/sdk": "^1.20.2",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@cloudflare/vitest-pool-workers": "^0.9.14",
		"@types/node": "^24.9.1",
		"@vitest/coverage-v8": "^3.2.4",
{{#unless DEV_MODE}}
		"mcp-server-kit": "^1.0.0",
{{/unless}}
		"tsx": "^4.20.6",
		"typescript": "5.9.3",
		"vitest": "^3.2.4",
		"wrangler": "^4.44.0"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	}
}
